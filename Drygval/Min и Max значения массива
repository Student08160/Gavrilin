using System;
using System.Collections.Generic;
using System.Linq;
using System.Runtime.InteropServices;
using System.Text;
using System.Threading.Tasks;

namespace Минимальное_и_максимальное_значение_массива
{
    internal class Program
    {
        static void Main(string[] args)
        {
            // Создание маассива.

            int[] nums = new int[10];

            // Наполнение массива.

            int value_of_element;

            for (int i = 0; i < nums.Length; i++)
            {
                Console.Write($"Пожалуйста, ввдите значение элемента {i + 1} в массиве: ");
                value_of_element = Convert.ToInt32(Console.ReadLine());
                nums[i] = value_of_element;
            }

            // Вычисление максимального и минимального элементов в массиве.

            int min_value = nums[0];
            int max_value = nums[1];

            for (int i = 0; i < nums.Length; i++)
            {
                if (nums[i] < min_value)
                {
                    min_value = nums[i];
                } 
                else if (nums[i] > max_value)
                {
                    max_value = nums[i];
                }
            }

            // Вывод максимального и минимального элементов в массиве.

            Console.WriteLine("Минимальное значение: " + min_value);
            Console.WriteLine("Максимальное значение: " + max_value);
        }
    }
}
